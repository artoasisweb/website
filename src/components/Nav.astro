---

        import ToggleMenu from '~/components/core/ToggleMenu.astro';
		---



<header
class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 dark:bg-slate-900 dark:md:bg-slate-900/90 md:backdrop-blur-sm border-b dark:border-b-0"
>
<div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
  <div class="flex justify-between">
    <a class="flex items-center" href="/">
      <img 	width="180px"

              src="/logo.png"/>
    </a>
  <div class="flex items-center md:hidden">
    <ToggleMenu />
  </div>
</div>
<nav
        class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-screen md:h-auto"
        aria-label="Main navigation"
        id="menu"
>
  <ul
          class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
  >
    <li>
      <a
              class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
              href="/university/"> Universidad</a
      >
    </li>
    <li>
      <a
              class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
              href="/projects/"> Proyectos
    </a>
  </li>
  <li>
      <a
              class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
              href="/about/"> Nosotros</a
      >
    </li>
    <li>
      <a
              class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
              href="/collaborate/"> Colabora
    </a>
  </li>
  
</ul>
        </nav>
        </div>
        </header>


<style>
	nav {
		display: flex;
		gap: 1rem;
		align-items: center;
		padding: 1rem 2rem;
	}

	.link {
		color: var(--t-subdue);
		display: block;
		text-decoration: none;
		font-size: var(--f-d1);
		text-transform: uppercase;
		padding-top: 0.75em;
		padding-bottom: 0.75em;
	}

	.link:hover,
	.link:focus {
		color: var(--t-active);
	}

	.monogram {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2em;
		height: 2em;
		margin-right: 0.5rem;
		color: var(--c-black);
		font-weight: 900;
		letter-spacing: -0.125rem;
		border: 3px solid currentColor;
		border-radius: 50%;
	}
	.section{
		display: flex;
		gap: 0.75em;
		margin-left: auto;
	}
</style>
