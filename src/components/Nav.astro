---
        import ToggleMenu from '~/components/core/ToggleMenu.astro';
        import BasicScripts from '~/components/core/BasicScripts.astro';
		---

<header
   class="sticky top-0 z-40 flex-none mx-auto bg-white md:bg-white/90 md:backdrop-blur-sm border-b dark:border-b-0">
   <div class="py-3 px-3 mx-auto md:flex md:justify-between max-w-6xl md:px-4">
      <div class="flex justify-between">
         <a class="flex items-center" href="/">
         <img 	width="180px"
            src="/logo.png"/>
         </a>
         <div class="flex items-center md:hidden">
            <ToggleMenu />
         </div>
      </div>
      <nav
         class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-sFcreen md:h-auto"
         aria-label="Main navigation"
         id="menu"
         >
         <ul
            class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base visible"
            >
            <li class="visible">
               <a
                  class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                  href="/university/"> Universidad</a
                  >
            </li>
            <li class="visible">
               <a
                  class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                  href="/projects/"> Proyectos
               </a>
            </li>
            <li class="visible">
               <a
                  class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                  href="/about/"> Nosotros</a
                  >
            </li>
            <li class="visible">
               <a
                  class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                  href="/collaborate/"> Colabora
               </a>
            </li>
            <li class="visible">
               <a
                  class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                  href="https://www.patreon.com/universidadartoasis"> Blog
               </a>
            </li>
         </ul>
      </nav>
   </div>
   <BasicScripts />
</header>