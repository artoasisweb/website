---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

const { content } = Astro.props;
---

<html lang={content.lang || 'en'}>
<head>
<MainHead title="Art Oasis" description="Universidad Art Oasis" />
<style>
	.heroImg {
		max-height: 24rem;
		object-fit: cover;
		overflow: hidden;
	}

	.heroImg img {
		width: 100%;
	}

	.bio {
		font-size: var(--f-u1);
		line-height: 2;
		margin-top: 4em;
		text-align: justify;
	}

	.wrapper.bio {
		max-width: 50em;
	}

	lite-youtube {
		margin-left: auto;
		margin-right: auto;
	}
</style>
</head>
<body>
<Nav />
<div class="wrapper">
	<h1>{content.title}</h1>
	<div class="heroImg">
		<img
				width="1400"
				height="350"
				src={content.img}
		/>
	</div>
	<div class="bio wrapper">
		<div class="content">
			<slot />
		</div>
	</div>
</div>
<Footer />
</body>

</html>
